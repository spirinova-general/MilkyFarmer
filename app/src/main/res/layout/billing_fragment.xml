<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Start Date :"
                                    android:textSize="14sp" />


                                <TextView
                                    android:id="@+id/start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_lighter"
                                    android:inputType="textNoSuggestions"
                                    android:padding="5dp"
                                    android:text="17 Nov 2015 "
                                    android:textColor="@color/white" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="End Date :"
                                    android:textSize="14sp" />


                                <TextView
                                    android:id="@+id/end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_lighter"
                                    android:inputType="textNoSuggestions"
                                    android:padding="5dp"
                                    android:text="17 Nov 2015 "
                                    android:textColor="@color/white" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Total Quantity :"
                                android:textSize="14sp" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/quantity_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="0dp">

                                <EditText
                                    android:id="@+id/milk_quantity"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:enabled="false"
                                    android:hint="Milk Quantity (in Litres)"
                                    android:inputType="numberDecimal"
                                    android:padding="0dp"
                                    android:text="2"
                                    android:textColor="@color/textfield_enable"

                                    />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payment"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Payment made :"
                                android:textSize="14sp" />

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/payment_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="0dp">

                                <EditText
                                    android:id="@+id/payment_amount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:enabled="false"
                                    android:hint="Paid amount (in RS)"
                                    android:inputType="numberDecimal"
                                    android:padding="0dp"
                                    android:textColor="@color/textfield_enable"

                                    />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            card_view:cardCornerRadius="4dp">


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimaryLight"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimary">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/colorPrimary"
                                        android:padding="5dp"
                                        android:src="@drawable/ic_balance" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="Bill"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/rate_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="5dp"
                                    android:padding="0dp">

                                    <EditText
                                        android:id="@+id/rate"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:enabled="false"
                                        android:hint="Rate (Rs)"
                                        android:inputType="numberDecimal"
                                        android:padding="0dp"
                                        android:text="100"
                                        android:textColor="@color/textfield_enable" />
                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/adjustment_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:visibility="gone">

                                    <EditText
                                        android:id="@+id/adjustment"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Adjustment (Rs)"
                                        android:inputType="numberDecimal"
                                        android:text="100" />
                                </android.support.design.widget.TextInputLayout>


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/amount_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="3dp"
                                    android:padding="0dp">

                                    <EditText
                                        android:id="@+id/balance_amount"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:enabled="false"
                                        android:hint="Balance Amount (Rs)"
                                        android:inputType="numberDecimal"
                                        android:padding="0dp"
                                        android:text="50"

                                        android:textColor="@color/textfield_enable" />
                                </android.support.design.widget.TextInputLayout>


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tax_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="3dp"
                                    android:padding="0dp">

                                    <EditText
                                        android:id="@+id/tax"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:enabled="false"
                                        android:hint="Tax (%)"
                                        android:inputType="numberDecimal"
                                        android:padding="0dp"
                                        android:text="20"
                                        android:textColor="@color/textfield_enable" />
                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimary">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Total"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/total_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="300 Rs"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </ScrollView>

                <!-- <android.support.design.widget.FloatingActionButton

                     android:id="@+id/editFab"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="end|bottom"
                     android:layout_margin="@dimen/fab_margin"
                     android:src="@drawable/edit_white"
                     android:visibility="visible"
                     app:backgroundTint="@color/colorPrimary"
                     app:borderWidth="0dp" />
     -->
            </android.support.design.widget.CoordinatorLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_button_click"
                    android:text="Save"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_button_click"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/clear_bill"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:enabled="false"
        android:padding="5dp"
        android:text="Clear Bill"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/clera_bill_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_lighter"
        android:padding="5dp"
        android:text="You can clear this bill once the final bill is generated on " />
</LinearLayout>

